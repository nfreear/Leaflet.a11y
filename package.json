{
  "private": true,
  "name": "leaflet-plugins-root",
  "version": "0.5.0",
  "description": "An accessibility and localization plugin for Leaflet.",
  "bin": "scripts/build.mjs",
  "license": "MIT",
  "author": "Nick Freear",
  "homepage": "https://nfreear.github.io/leaflet.a11y/",
  "repository": {
    "type": "git",
    "url": "https://github.com/nfreear/leaflet.a11y.git"
  },
  "peerDependencies": {
    "leaflet": "^1.0.0"
  },
  "scripts": {
    "build": "npm run build:plugin && npm run copy",
    "build:plugin": "node scripts/build.mjs",
    "copy": "cp Leaflet.a11y.js example/lib && cp src/* example/lib && npm run copy:x",
    "copy:x": "cp packages/*/*.css packages/*/*/*.mjs example/lib",
    "start": "npm run build && npx servor example",
    "start:debug": "npx servor",
    "fix": "semistandard --fix",
    "test": "semistandard"
  },
  "keywords": [
    "leaflet",
    "map",
    "i18n",
    "internationalization",
    "internationalisation",
    "localization",
    "translation",
    "a11y",
    "accessibility"
  ],
  "devDependencies": {
    "semistandard": "^17.0.0",
    "servor": "^4.0.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
